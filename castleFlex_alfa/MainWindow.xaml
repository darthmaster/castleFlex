        </Button>
        <Button x:Name="infoButton" Content="Information" Margin="374,0,0,4.6" Width="255" Foreground="#FF9000FF" FontFamily="Monotype Corsiva" FontSize="20" Opacity="0.8" BorderThickness="0" RenderTransformOrigin="10,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="InfoButton_Click" FontStyle="Italic" FontWeight="Bold" Height="40">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="15"/>
                    <RotateTransform/>
                    <TranslateTransform/>
