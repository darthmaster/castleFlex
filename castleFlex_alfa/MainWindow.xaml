            </Button.RenderTransform>
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFFFD300"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="otherButton" Content="About" Margin="110,0,0,4.6" Width="255" Foreground="#FF9000FF" FontFamily="Monotype Corsiva" FontSize="20" Opacity="0.8" BorderThickness="0" RenderTransformOrigin="10,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="OtherButton_Click" FontStyle="Italic" FontWeight="Bold" Height="40">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="15"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFFFD300"/>
                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Grid x:Name="multi" Margin="519,67,13,77.6" VerticalAlignment="Center" Opacity="0.5" RenderTransformOrigin="0.5,0.5" Background="#FF7D00FF">
            <Label Content="game configuration" HorizontalAlignment="Left" Margin="83,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" FontFamily="Monotype Corsiva" Width="175"/>
            <Label Content="Your name:" HorizontalAlignment="Left" Margin="13,47,0,224.8" Foreground="White" FontFamily="Monotype Corsiva" FontSize="20" Height="32"/>
            <Label Content="IP addres:" HorizontalAlignment="Left" Margin="21,85,0,187.8" Foreground="White" FontFamily="Monotype Corsiva" FontSize="20" Height="32"/>
            <Label Content="Port:" HorizontalAlignment="Left" Margin="58,122,0,150.8" Foreground="White" FontFamily="Monotype Corsiva" FontSize="20" Height="32"/>
            <TextBox x:Name="username" HorizontalAlignment="Left" Height="32" Margin="109,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#7F000000" Foreground="White" BorderBrush="#00ABADB3" TextDecorations="{x:Null}" TextOptions.TextHintingMode="Animated" SelectionBrush="#FFFFDC00" FontSize="18" FontStyle="Italic" Text="player"/>
