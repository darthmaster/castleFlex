            <Label Content="ReceivePort:" HorizontalAlignment="Left" Margin="5,159,0,113.8" Foreground="White" FontFamily="Monotype Corsiva" FontSize="20" Height="32"/>
            <Button x:Name="multiStart" Content="Start Game" HorizontalAlignment="Left" Margin="0,263,0,-0.2" VerticalAlignment="Top" Width="268" Height="42" Foreground="White" Background="#FF370071" BorderBrush="#00707070" FontFamily="Monotype Corsiva" FontSize="22" Click="MultiStart_Click" BorderThickness="0"/>
            <RadioButton x:Name="serverBtn" Content="Server" HorizontalAlignment="Left" Margin="109,196,0,0" Background="White" Foreground="White" BorderBrush="#00707070" FontFamily="Monotype Corsiva" FontSize="20" Width="76" Height="22" VerticalAlignment="Top"/>
            <RadioButton x:Name="clientBtn" Content="Client" HorizontalAlignment="Left" Margin="183,196,0,0" VerticalAlignment="Top" Background="White" Foreground="White" BorderBrush="#00707070" FontFamily="Monotype Corsiva" FontSize="20" Width="75" Height="20"/>
        </Grid>
        <TextBox Margin="141,85,140,64.6" TextWrapping="Wrap" AcceptsReturn="True" x:Name="guideBox" FontFamily="Monotype Corsiva" FontSize="20" Background="#FF7D00FF" BorderBrush="#00ABADB3" Foreground="White" Opacity="0.7" BorderThickness="0" AllowDrop="False" Focusable="False" AcceptsTab="True" AutoWordSelection="True" IsReadOnly="True" TextOptions.TextHintingMode="Fixed" HorizontalAlignment="Center" VerticalAlignment="Center" Width="519" Height="300" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="10" />
    </Grid>
</Window>
